{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es6", "es2016.array.include", "es2015.promise"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "target": "es6",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "include": ["typings/index.d.ts", "src/**/*", "test/**/*"]
}
